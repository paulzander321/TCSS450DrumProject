<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryPurple"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uw.tacoma.zanderp.tcss450drumproject.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        style="@style/MainScreenButton"
        android:text="@string/play_drums_button_text"
        android:id="@+id/play_drums"
        android:clickable="true"
        android:onClick="playDrums" />

    <Button
        style="@style/MainScreenButton"
        android:text="@string/customize_drumset"
        android:id="@+id/button2"
        android:onClick="customDrums" />

    <Button
        style="@style/MainScreenButton"
        android:text="@string/view_recordings"
        android:id="@+id/view_recordings"
        android:onClick="viewMyRecordings" />

    <Button
        style="@style/MainScreenButton"
        android:text="@string/explore_community"
        android:id="@+id/explore_recordings"
        android:onClick="viewAllRecordings" />

    <Button
        style="@style/MainScreenButton"
        android:text="@string/help_button"
        android:id="@+id/help"
        android:onClick="documentation"/>
</LinearLayout>
